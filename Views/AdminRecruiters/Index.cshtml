@model IEnumerable<HiredHunters.Models.Recruiter>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_layout.cshtml";
}





<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Recruiter_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profilepic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JoiningDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.R_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total_job_Posted)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="table-primary">
        <td>
            @Html.DisplayFor(modelItem => item.Recruiter_ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Profilepic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JoiningDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.R_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rating)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total_job_Posted)
        </td>
      
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.r_no }, new { @class = "btn btn - primary" })
            @Html.ActionLink("Details", "Details", new { id=item.r_no }, new { @class = "btn btn - primary" })
            @Html.ActionLink("Delete", "Delete", new { id=item.r_no }, new { @class = "btn btn - primary" })
        </td>
    </tr>
}

</table>
