@model IEnumerable<HiredHunters.Models.Applylist>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Freelencer_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Freelencer.username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Job.Job_ID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Freelencer.Freelencer_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Freelencer.username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Job.Job_ID)
            </td>
            <td>
            <td>
                @{ if (item.isgiven == 0)
                    { @Html.ActionLink("Approve", "Recruiter", new { id = item.apply_no }, new { @class = "btn btn - primary" })
                    @Html.ActionLink("Details", "Details", new { id = item.Freelencer_ID }, new { @class = "btn btn - primary" })


                }

                else
                { @Html.ActionLink("Not approved", "Recruier", new { id = item.apply_no }, new { @class = "btn btn - primary" })
                @Html.ActionLink("Details", "Details", new { id = item.Freelencer_ID }, new { @class = "btn btn - primary" })



            }
                }
            </td>


        </tr>
    }

</table>
